<Defs>
    <!-- Toxic wastepack material -->
  <CustomLoads.BulletMaterialDef ParentName="BaseBulletMaterial" MayRequire="Ludeon.RimWorld.Biotech">
    <defName>BulletMat_Toxpack</defName>
    <material>Wastepack</material>
    <label>wastepack</label>
    <tint>(95, 212, 142, 255)</tint>
    <costPerBullet>0.05</costPerBullet>
    <mods>
      <li>
        <parts>BulletJacket</parts>
        <desc>The bullet jacket has been made out of highly compacted toxic waste, greatly reducing its damage and penetration but delivering toxic buildup straight to the target.</desc>
        <damage>x0.5</damage>
        <apSharp>x0.5 -2</apSharp>
        <apBlunt>x0.5 -2</apBlunt>
        <secondaryDamages>
          <li>
            <def>BulletToxic</def>
            <amount>4</amount>
            <chance>1</chance>
          </li>
        </secondaryDamages>
      </li>
    </mods>
  </CustomLoads.BulletMaterialDef>
</Defs>